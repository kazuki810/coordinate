<div class="content_post" style="background-image: url(<%= code.image %>);">
  <div class="more">
    <span><%= image_tag 'arrow_top.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to "詳細", code_path(code.id), method: :get %>
      </li>
      <% if user_signed_in? && current_user.id == code.user_id %>
        <li>
          <%= link_to '編集', "/codes/#{code.id}/edit", method: :get %>
        </li>
        <li>
          <%= link_to '削除', "/codes/#{code.id}", method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= simple_format(code.text) %>
  <span class="name">
    <a href="/users/<%= code.user_id %>">
      <span>投稿者</span><%= code.user.nickname %>
    </a>
  </span>
</div>